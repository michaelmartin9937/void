---
// components
import NewsletterForm from "@components/Forms/NewsletterForm.astro";
---

<section id="newsletter" class="my-12">
  <div
    class="border border-primary-500 bg-base-200 px-4 py-16 md:px-6 dark:bg-base-900"
  >
    <div class="mx-auto max-w-lg">
      <h3 class="h2 text-center">In the know</h3>
      <p class="mt-2 text-center opacity-90">
        Get the best web design tips twice a week.
      </p>
      <NewsletterForm
        name="cta-newsletter"
        class="mx-auto mt-4 max-w-[400px]"
      />
      <p class="mt-3 text-center text-xs opacity-90">
        I won't send you spam. Unsubscribe at any time.
      </p>
    </div>
  </div>
</section>
