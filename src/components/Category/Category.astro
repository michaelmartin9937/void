---
import { slugify, categorify, humanize } from "@js/textUtils";

interface Props {
  category: string;
  class?: string;
}

const { category, class: classList } = Astro.props as Props;
---

<a
  href={`/categories/${slugify(category)}/`}
  class:list={[
    "rounded-full bg-base-200 px-3 py-1 font-medium transition hover:text-primary-600 dark:bg-base-800 dark:hover:text-primary-400",
    classList,
  ]}
>
  {humanize(category)}
</a>
